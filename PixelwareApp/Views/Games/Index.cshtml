@model IEnumerable<PixelwareApp.Models.Game>

@{
	ViewBag.Title = "Games";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Games</h2>

@if (!Model.Any())
{
	<p>We don't have any games registered yet.</p>
}
else
{
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>Game</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var game in Model)
			{
				<tr>
					<td>@game.Name</td>
				</tr>
			}
		</tbody>
	</table>
}

